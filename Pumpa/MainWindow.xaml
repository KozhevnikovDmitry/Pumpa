<Window x:Class="Pumpa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pumpa" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Sign In!" FontSize="20" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

            <Label Content="Login" Grid.Column="0" Grid.Row="1" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Width="200"/>

            <Label Content="Password" Grid.Column="0" Grid.Row="2" />
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5"  Width="200"/>

            <Button Content="Let's Go!" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="3" Margin="5" Width="50"/>
            
            <Label Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right">
                <Hyperlink>
                    Register
                </Hyperlink>
            </Label>
        </Grid>


        <Grid VerticalAlignment="Center" HorizontalAlignment="Center"  Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Register" FontSize="20" Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

            <Label Content="Login" Grid.Column="0" Grid.Row="1" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Width="200"/>

            <Label Content="Password" Grid.Column="0" Grid.Row="2" />
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5"  Width="200"/>

            <Button Content="Ok" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="3" Margin="5" Width="50"/>
            
            <Label Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right">
                <Hyperlink>
                    Sign Out
                </Hyperlink>
            </Label>
        </Grid>
        

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center"  Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Hi there!" FontSize="20" Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
           
            <Button Content="Sign Out" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="3" Margin="5" Width="50"/>
        </Grid>
    </Grid>
</Window>
